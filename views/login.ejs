<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Las Vegas | Log in</title>
    <link href="https://fonts.googleapis.com/css2?family=Shrikhand&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;0,700;0,900;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link href="../public/css/style.css" rel="stylesheet" type="text/css">
</head>
<body>
  <%- include('partials/header') %>
  <section id="main">
    <section class='login'>
      <h1>Sign in to see your list!</h1>
      <div class='errorMsg'>
        <% if (locals.messages.errors) { %>
          <% messages.errors.forEach( el => { %>
            <span class="alert alert-danger">
              <%= el.msg %>
            </span>
          <% }) %>    
        <% } %>
        <% if (locals.messages.info) { %>
          <% messages.info.forEach( el => { %>
            <span class="alert alert-danger">
              <%= el.msg %>
            </span>
          <% }) %>    
        <% } %>
      </div>
      <section class="interact">
        <form action="/login" method="POST">
          <label for="email">Email Address:</label>
          <input type="email" name="email" placeholder="bob@100devs.com">
          <label for="password">Password:</label>
          <input type="password" name="password" placeholder="100D3vsR0cks!">
          <input type="submit" class="submitBtn" value='Sign in'>
        </form>
        <div class='newUsers'>
          <p>Don't have an account?</p>
          <a href="/signup"> Sign up</a>
        </div>
      </section>
    </section>
  </section>
  <%- include('partials/footer') %>
</body>
</html>